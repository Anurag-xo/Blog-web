<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

  <label for="body"><b>Content</b></label>
    <textarea id="markdown-editor" name="body" cols="50" rows="10" required><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn">

</form>

<script>
  // Initialize SimpleMDE
  const simplemde = new SimpleMDE({
    element: document.getElementById("markdown-editor"), // Target the textarea
    spellChecker: false, // Disable spell checker (optional)
    placeholder: "Write your blog post in Markdown...", // Add a placeholder
  });
</script>
