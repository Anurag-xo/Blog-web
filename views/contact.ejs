<div class="contact-container">
  <!-- Contact Form Section -->
  <section class="contact-form">
    <h2 class="contact-form__title">Get in Touch</h2>
    <p class="contact-form__description">
      Have a question or want to collaborate? Feel free to send me a message!
    </p>
    <form action="/contact" method="POST" class="contact-form__form">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Your Name" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Your Email" required>
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" placeholder="Your Message" required></textarea>
      </div>
      <button type="submit" class="btn">Send Message</button>
    </form>
  </section>

  <!-- Contact Information Section -->
  <section class="contact-info">
    <h2 class="contact-info__title">Contact Information</h2>
    <div class="contact-info__details">
      <div class="contact-info__item">
        <i class="fas fa-envelope"></i>
        <p>Email: <a href="mailto:anuragrko42004@gmail.com">anuragrko42004@gmail.com</a></p>
      </div>
      <div class="contact-info__item">
        <i class="fas fa-phone"></i>
        <p>Phone: <a href="tel:+1234567890">+123 456 7890</a></p>
      </div>
      <div class="contact-info__item">
        <i class="fas fa-map-marker-alt"></i>
        <p>Location: Bhilai, India</p>
      </div>
    </div>
    <div class="contact-info__socials">
      <a href="https://github.com/your-github" target="_blank" class="social-link">
        <i class="fab fa-github"></i>
      </a>
      <a href="https://instagram.com/your-instagram" target="_blank" class="social-link">
        <i class="fab fa-instagram"></i>
      </a>
      <a href="https://linkedin.com/in/your-linkedin" target="_blank" class="social-link">
        <i class="fab fa-linkedin"></i>
      </a>
      <a href="https://twitter.com/your-twitter" target="_blank" class="social-link">
        <i class="fab fa-twitter"></i>
      </a>
    </div>
  </section>

  <!-- Optional: Map Section -->
  <section class="contact-map">
    <h2 class="contact-map__title">Find Me</h2>
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3721.1234567890123!2d81.4321!3d21.1234!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a28e8f123456789%3A0xabcdef1234567890!2sBhilai%2C%20Chhattisgarh%2C%20India!5e0!3m2!1sen!2sus!4v1633033456789!5m2!1sen!2sus"
      width="100%"
      height="300"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
    ></iframe>
  </section>
</div>
